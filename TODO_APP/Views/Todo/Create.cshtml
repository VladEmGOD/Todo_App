@model TodoCreateFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Todo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="TodoModel.CategoryId" class="control-label"></label>
                <select asp-for="TodoModel.CategoryId" class="form-control">
                    <option value="0">Choose a category</option>
                    @foreach (var item in Model.CategoryModels)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="TodoModel.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoModel.Title" class="control-label"></label>
                <input asp-for="TodoModel.Title" class="form-control" />
                <span asp-validation-for="TodoModel.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoModel.Deadline" class="control-label"></label>
                <input asp-for="TodoModel.Deadline" type="date" class="form-control"/>
                <span asp-validation-for="TodoModel.Deadline" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" onclick="confirmOut()">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
